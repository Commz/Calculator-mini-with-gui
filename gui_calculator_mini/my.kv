<FloatLayout>
    cols:1
    label:label

    size: root.width, root.height


    Label:
        id:label
        text:" "
        color: 0,0,0,0.75
        size_hint:0.75,0.20
        pos_hint:{"x":0, "y":0.8}
        font_size: 35

    Button:
        size_hint: 0.75, 0.20
        pos_hint:{"x":0,"y":0}
        text:"0"
        font_size: 35
        on_release: root.updateGui("0")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0,"top":0.4}
        text:"1"
        font_size: 35
        on_release: root.updateGui("1")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0.25,"top":0.4}
        text:"2"
        font_size: 35
        on_release: root.updateGui("2")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0.50,"top":0.4}
        text:"3"
        font_size: 35
        on_release: root.updateGui("3")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0,"top":0.6}
        text:"4"
        font_size: 35
        on_release: root.updateGui("4")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0.25,"top":0.6}
        text:"5"
        font_size: 35
        on_release: root.updateGui("5")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0.50,"top":0.6}
        text:"6"
        font_size: 35
        on_release: root.updateGui("6")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0,"top":0.8}
        text:"7"
        font_size: 35
        on_release: root.updateGui("7")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0.25,"top":0.8}
        text:"8"
        font_size: 35
        on_release: root.updateGui("8")

    Button:
        size_hint: 0.25, 0.20
        pos_hint:{"x":0.50,"top":0.8}
        text:"9"
        font_size: 35
        on_release: root.updateGui("9")

    Button:
        size_hint: 0.25,0.20
        pos_hint:{"x":0.75,"y":0}
        text:"/"
        font_size: 35
        on_release: root.opFunc("/")

    Button:
        size_hint: 0.25,0.20
        pos_hint:{"x":0.75,"y":0.2}
        text:"*"
        font_size: 35
        on_release: root.opFunc("*")

    Button:
        size_hint: 0.25,0.20
        pos_hint:{"x":0.75,"y":0.4}
        text:"-"
        font_size: 35
        on_release: root.opFunc("-")

    Button:
        size_hint: 0.25,0.20
        pos_hint:{"x":0.75,"y":0.6}
        text:"+"
        font_size: 35
        on_release: root.opFunc("+")

    Button:
        size_hint: 0.25,0.10
        pos_hint:{"x":0.75,"y":0.80}
        text:"DEL"
        font_size: 35
        on_release: root.delFunc()

    Button:
        size_hint: 0.125,0.10
        pos_hint:{"x":0.75,"y":0.90}
        text:"="
        font_size: 35
        on_release: root.equalFunc()

    Button:
        size_hint: 0.125,0.10
        pos_hint:{"x":0.875,"y":0.90}
        text:"."
        font_size: 35
        on_release: root.updateGui(".")
